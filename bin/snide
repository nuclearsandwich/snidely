#!/usr/bin/env ruby
require 'thor'
require 'yaml'

class Snide < Thor
	desc "clobber", "remove all symlinks and files created by Snidely"
	def clobber
		YAML.load_file("manifest.yml").each do |file|
			File.remove file
			puts "Removed #{file}"

			invoke :clean
		end
	end

	desc "clean", "remove generated config files"
	def clean

	end

end

Snide.start
